{{#each content}}
<div class="Content-Header">
	<div class="Hero-Content">
		{{{this.heroCaption}}}
		<img class="Hero-Image" src="{{this.heroImage}}" height="1000" width="1000" alt="">
		<a class="Button" href="{{this.heroCTALink}}">{{this.heroCTALabel}}</a>
	</div>
</div>
<div class="Content Layout-body">
	<div class="Content-Body">
		<span id="features"></span>
		<div class="Panel One">
			<div class="Viewport Features">
				<div class="ThreeColumn">
					<div class="Column One">
						<h3>{{this.feature1Heading}}</h3>
						{{!-- Don't have this yet 
						<img class="Feature Image" src="/assets/images/feature1.svg" alt="">
						--}}
						{{{this.feature1Content}}}
					</div>
					<div class="Column Two">
						<h3>{{this.feature2Heading}}</h3>
						{{!-- Don't have this yet 
						<img class="Feature Image" src="/assets/images/feature2.svg" alt="">
						--}}
						{{{this.feature2Content}}}
					</div>
					<div class="Column Three">
						<h3>{{this.feature3Heading}}</h3>
						{{!-- Don't have this yet 
						<img class="Feature Image" src="/assets/images/feature3.svg" alt="">
						--}}
						{{{this.feature3Content}}}
					</div>
				</div>
			</div>
		</div>
		<span id="clients"></span>
		<div class="Panel Two">
			<div class="Viewport">
				<h2 class="Page-Subtitle">{{this.clientsPanelHeading}}</h2>
				{{{this.clientsPanelContent}}}
			</div>
		</div>
		<span id="salesPitch"></span>
		<div class="SalesPitch">
			<div class="Panel Three">
				<div class="Viewport">
					<div class="TwoColumn">
						<div class="Column One">
							{{{this.salesPitch1Content}}}
						</div>
						<div class="Column Two Image">
							<img src="{{this.salesPitch1Image}}" height="600" width="600" alt="">
						</div>
					</div>
				</div>
			</div>
			<div class="Panel Four">
				<div class="Viewport">
					<div class="TwoColumn">
						<div class="Column One Image">
							<img src="{{this.salesPitch2Image}}" height="600" width="600" alt="">
						</div>
						<div class="Column Two">
							{{{this.salesPitch2Content}}}
						</div>
					</div>
				</div>
			</div>
			<div class="Panel Five">
				<div class="Viewport">
					<div class="TwoColumn">
						<div class="Column One">
							{{{this.salesPitch3Content}}}
						</div>
						<div class="Column Two Image">
							<img src="{{this.salesPitch3Image}}" height="600" width="600" alt="">
						</div>
					</div>
				</div>
			</div>
		</div>
		<span id="contact"></span>
		<div class="Panel Six">
			<div class="Viewport">
				{{{this.contactPanelContent}}}
			</div>
			<h3>Inquire Now</h3>
			<form id="contact" name="contact" class="Form Form-contact" action="/" method="post">
				<div class="Field ">
					<input name="firstName" id="contact_firstName" type="text" value="" class="Input Hide">
				</div>
				<div class="Field required">
					<label class="Label" for="contact_name">Name</label>
					<input name="name" id="contact_name" type="text" value="" class="Input" required="">
				</div>
				<div class="Field required">
					<label class="Label" for="contact_email">Email</label>
					<input name="email" id="contact_email" type="email" value="" class="Input" required="">
				</div>
				<div class="Field required">
					<label class="Label" for="contact_message">Message</label>
					<textarea name="message" id="contact_message" class="Input" required=""></textarea>
				</div>
				<div class="Field ">
					<label class="Checkbox">
					<input type="checkbox" name="emailUpdates" value="Yes ">
					<span class="Checkbox-Text">I want to receive email updates from Zerk</span></label>
				</div>
				<div class="Field FieldAction">
					<button class="Button" name="contactAction" type="submit"><span class="Button-Text">Send</span></button>
				</div>
			</form>
		</div>
	</div>	
</div>
{{/each}}